/*
* codedoc Style
* ===============================================================
*
* Defining the __codedoc__ stylesheets. This is done using [stylus](http://stylus-lang.com/)
* and precompiled into a [compressed css](codedoc.css.html) syntax.
*/

// import nib snap-in for more browser compatibility
@import 'nib'


/*
* Variable setup
* ---------------------------------------------------------
*/
// layout
$topnav-height = 51px
$min-width = 300px
// colors
$color-background = #ddd
$color-orange = #f0ad4e
$color-blue = #337ab7
// colors for boxes
$color-info = #99ff99
$color-warning = #fbcd4a
$color-alert = #ee8866
// colors for code boxes
$color-code = $color-orange
$color-data = $color-blue
$color-style = #1d9a96
$color-doc = #459245


/*
* Page Layout
* --------------------------------------------------------------
*/
#topnav
  text-align: center
  background: #333
  padding-bottom: 20px
  position: fixed
  margin-top: 0px
  width: 100%
  bottom: 0
  top: $topnav-height
  .navbar-nav
    margin: 0
    margin-top: 8px
    display: inline-flex
  .sidebar-to-top
    .btn
      text-align: left
    li
      &.level2>a
        margin-left: 20px
      &.level3>a
        margin-left: 40px
      &.level4>a
        margin-left: 60px
      &.level5>a
        margin-left: 80px
      &.level6>a
        margin-left: 100px
.navbar-fixed-top .navbar-collapse
  max-height: 100%
.navbar
  min-width: $min-width
.nav>li
  padding: 2px 12px
.navbar-inverse
  .nav>li>a
    color: black
    font-weight: bold
    padding-top: 6px
    padding-bottom: 6px
    &:focus
    &:hover
      gradient: lighten($color-blue, 15)
    &.btn-warning
      &:focus
      &:hover
        gradient: darken($color-orange, 15)
.navbar-spacer
  height: $topnav-height
.btn-warning
.btn-primary
  click-shrink()
.btn-warning
  gradient: $color-orange
.btn-primary
  gradient: $color-blue

.sidebar .nav
  display: none
  list-style: disc
  padding-left: 25px
  &>li
    display: list-item
    &>a
      color: black
      click-shadow()
      &:hover
        gradient: $color-blue
        color: white
    &.header
    &.active
      display: none
    &.active>a
      gradient: lighten($color-blue, 15)
      &:hover
        gradient: $color-blue
        color: white
    &.header>a
      font-weight: bold
      gradient: $color-orange
      &:hover
        gradient: darken($color-orange, 15)
        color: white
    &.level2>a
      padding-left: 30px
    &.level3>a
      padding-left: 50px
    &.level4>a
      padding-left: 70px
    &.level5>a
    &.level6>a
      padding-left: 90px
.navbar-inverse
  .navbar-toggle
    background-color: #444
    &:hover
      background-color: #666

@media (min-width: 768px)
  #topnav
    position: inherit
    .nav>li
      padding: 0 4px
    .sidebar-to-top
      display: none
    background: #222
    padding-bottom: 0
  .navbar-right
    margin-right: 0px
  .navbar-nav
    >li>a
      padding: 6px 10px
  .sidebar
    overflow: auto
    position: fixed
    top: $topnav-height
    left: 0
    bottom: 0
    background: #ddd
    padding: 0
    h1, h2
      display: none
    .nav
      display: block
      list-style: none
      padding-left: 0
      &>li
        padding: 0
        &.header
        &.active
          display: block
          &.level2>a:before
          &.level3>a:before
          &.level4>a:before
          &.level5>a:before
          &.level6>a:before
            content: "•"
        &>a
          padding-top: 8px
          padding-bottom: 8px
        &.level2>a:before
        &.level3>a:before
        &.level4>a:before
        &.level5>a:before
        &.level6>a:before
          content: "◦"
          font-size: 150%
          line-height: 10%
          font-weight: bold
          padding-right: 5px
          display: block
          float: left
          margin-top: 8px
          margin-left: -15px
          color: #666

img.preload
  display: none

/*
* Format for Tags
* --------------------------------------------------------------
*/

body
  font-family: "Helvetica Neue",Helvetica,"Segoe UI",Arial,freesans,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  font-size: 16px
  line-height: 1.2
  hyphenation()
  min-width: $min-width

// headings
h1, h2, h3, h4, h5, h6
  font-weight: bold
  &:before /* move anchor pint up */
    display: block
    content: " "
    margin-top: -66px
    height: 66px
    visibility: hidden
h1, h2, h3
  clear: both
h1
  border-bottom: 3px solid black
  padding-bottom: 5px
h2
  border-bottom: 2px dotted black
  padding-bottom: 3px
h3
  border-bottom: 2px dotted gray
  padding-bottom: 2px
h4
  border-bottom: 1px dotted gray

dt
  font-weight: bold
  margin-top: 8px
dd
  margin-left: 20px

svg
  max-width: 100%
img
  max-width: 100%
  vertical-align: middle

.emoji
  height: 1em
abbr
acronym
  border-bottom: dotted 1px

// blockquotes
blockquote
  border: 1px solid $color-background
  border-radius: 3px
  border-left: 5px solid $color-blue
  padding: 5px 15px
  margin: 10px 0
  :first-child
    margin-top: 5px
  :last-child
    margin-bottom: 5px
  blockquote
    margin-right: -16px
    border-left-color: $color-orange
    blockquote
      border-left-color: $color-blue
      blockquote
        border-left-color: $color-orange
  ul li p
    margin-bottom: 0


/*
* Table Layout
* --------------------------------------------------------------
*/
table
  border-collapse: collapse
  border-spacing: 0
  display: block
  width: 100%
  overflow: auto
  word-break: keep-all
  margin-bottom: 10px
  th, td
    padding: 6px 13px
    border: 1px solid #ddd
  th
    background-color: rgba(0, 0, 0, 0.04)
    font-weight: bold
    border-bottom: 3px solid #999
  tr
    background-color: #fff
    border-top: 1px solid #ccc
    &:nth-child(2n)
      background-color: rgba(0, 0, 0, 0.04)


/*
* Text Block and Code
* --------------------------------------------------------------
*/
a code
  color: $color-blue
code, tt
  background-color: #fafafa
  border-radius: 4px
  font-size: 85%
  margin: 0
  padding: 0.2em 0
pre
  background-color: #fafafa
  border-radius: 10px
  border: 1px solid #a4a4a4
  font-size: 85%
  margin: 20px
  padding: 10px
  code, tt
    background: none
  &.language
    counter-reset: line
    padding-top: 0
    padding-bottom: 0
    overflow-x: hidden
    code, tt
      display: block
      position: relative
      float: left
      width: 100%
      border-left: 45px solid $color-background
      margin-left: -10px
      padding-left: 5px
      &:nth-child(2n)
        border-left: 45px solid darken($color-background, 10%)
        background-color: darken(#fafafa, 5%)
      &:before
        counter-increment: line
        content: counter(line)
        min-width: 35px
        float: left
        text-align: right
        padding-right: 5px
        color: grey
        no-select()
        -webkit-user-select: none
        margin-left: -45px
      &:first-of-type
        padding-top: 10px
      &:last-child
        padding-bottom: 10px
    header
      display: none


/*
* Table of Contents
* --------------------------------------------------------------
*/
ul.table-of-contents
  max-width: 100px
  max-height: 30px
  overflow: hidden
  position: fixed
  top: $topnav-height
  right: 0px
  background: #ddd
  padding: 5px 15px
  transition: max-width 100ms ease 1.2s, max-height 1s ease 200ms
  border-left: 2px solid #999
  border-bottom: 2px solid #999
  border-bottom-left-radius: 10px
  list-style-type: none
  white-space: nowrap
  z-index: 100
  &:hover
    max-width: 285px
    max-height: 248px
    transition: max-width 100ms ease, max-height 1s ease 100ms
    overflow-y: auto
  header
    background: #999
    font-weight: bold
    margin: -5px -15px
    padding: 5px 15px
  &>li
    padding-bottom: 2px
    padding-right: 8px
    &:first-of-type
      padding-top: 10px
  a
    color: black
  li.sidebar
    display: list-item
@media (min-width: 768px)
  ul.table-of-contents
    li.sidebar
      display: none


/*
* Box Layout
* --------------------------------------------------------------
*/
.tabs
  padding: 0
  /* to move all other contents below */
  &:after
    content: ''
    display: table
    clear: both
  input.tab
  input.tabs-size
    display: none
  /* style for tab headings */
  input.tab + label
    position: relative
    z-index: 1
    display: block
    float: left
    cursor: pointer
    padding: 5px 10px
    margin-bottom: -1px
    border: 1px solid black
    border-top-left-radius: 10px
    border-top-right-radius: 10px
    background: $color-background
    transition: all 0.5s
    opacity: 0.5
    font-weight: bold
    font-size: 80%
  input.tab + label:hover
  input.tab:hover + label
    opacity: 1
  /* hide tab contents */
  .tab-content
    display: none
    position: relative
    clear: both
    border: 1px solid black
    border-top-right-radius: 10px
    border-bottom-left-radius: 10px
    border-bottom-right-radius: 10px
    padding: 0 15px
    transition: all 0.5s
    overflow: auto
    max-height: 300px
    > p
      margin-top: 10px
  input.tab:checked + label
    cursor: default
    border-bottom: 1px solid #fff
    opacity: 1
  /* link tab with content */
  .tab1:checked ~ .tab-content1
  .tab2:checked ~ .tab-content2
  .tab3:checked ~ .tab-content3
  .tab4:checked ~ .tab-content4
  .tab5:checked ~ .tab-content5
  .tab6:checked ~ .tab-content6
  .tab7:checked ~ .tab-content7
  .tab8:checked ~ .tab-content8
    display: block
  /* action */
  .tabs-size + label
    cursor: pointer
    float: right
    padding: 5px 5px 0 5px
    font-size: 80%
  .tabs-size-min:checked + label
  .tabs-size-scroll:checked + label
  .tabs-size-max:checked + label
    display: none
  .tabs-size-min:checked ~ .tab-content
    height: 0
  .tabs-size-max:checked ~ .tab-content
    max-height: none
@media print
  input.tab + label
    opacity: 1 !important
  .tabs-size-min + label
  .tabs-size-scroll + label
  .tabs-size-max + label
    display: none
  .tab-content
    display: block !important
    max-height: none !important
    height: auto !important
/* color settings */
.tabs
  input.tab + label.detail
    background-image: linear-gradient(to bottom, #fafafa 0%, #999 100%)
    border-bottom-color: #999
  div.detail
    background-image: linear-gradient(to bottom, #fafafa 0%, #999 100%)

  input.tab + label.info
    background-image: linear-gradient(to bottom, lighten($color-info, 50%) 0%, $color-info 100%)
    border-bottom-color: $color-info
  div.info
    background-image: linear-gradient(to bottom, lighten($color-info, 50%) 0%, $color-info 100%)

  input.tab + label.warning
    background-image: linear-gradient(to bottom, lighten($color-warning, 50%) 0%, $color-warning 100%)
    border-bottom-color: $color-warning
  div.warning
    background-image: linear-gradient(to bottom, lighten($color-warning, 50%) 0%, $color-warning 100%)

  input.tab + label.alert
    background-image: linear-gradient(to bottom, lighten($color-alert, 50%) 0%, $color-alert 100%)
    border-bottom-color: $color-alert
  div.alert
    background-image: linear-gradient(to bottom, lighten($color-alert, 50%) 0%, $color-alert 100%)

/*
* Special box content: code
*/
.tabs
  .tab-content.pre
    padding: 0
    pre
    table
      margin: 0
      border: 0
      border-radius: 0
  // special color settings
  input.tab + label.coffeescript
  input.tab + label.javascript
  input.tab + label.ruby
  input.tab + label.python
  input.tab + label.perl
  input.tab + label.cc
  input.tab + label.cpp
  input.tab + label.cs
  input.tab + label.java
  input.tab + label.groovy
  input.tab + label.php
  input.tab + label.bash
  input.tab + label.sql
  input.tab + label.makefile
    background-image: linear-gradient(to bottom, lighten($color-code, 50%) 0%, $color-code 100%)
    border-bottom-color: $color-code
  input.tab + label.json
  input.tab + label.cson
  input.tab + label.yaml
    background-image: linear-gradient(to bottom, lighten($color-data, 50%) 0%, $color-data 100%)
    border-bottom-color: $color-data
  input.tab + label.jsp
  input.tab + label.handlebars
  input.tab + label.css
  input.tab + label.stylus
  input.tab + label.scss
  input.tab + label.less
    background-image: linear-gradient(to bottom, lighten($color-style, 50%) 0%, $color-style 100%)
    border-bottom-color: $color-style
  input.tab + label.markdown
  input.tab + label.html
    background-image: linear-gradient(to bottom, lighten($color-doc, 50%) 0%, $color-doc 100%)
    border-bottom-color: $color-doc


/*
* Search Form
* --------------------------------------------------------------
*/
.cse .gsc-control-cse, .gsc-control-cse
  padding: 0px !important
  table
    tr, th, td
      border: 0
  .gsc-cursor-current-page
    color: white !important
  .gsc-webResult.gsc-result:hover, .gsc-imageResult:hover
    border-left: 5px solid $color-blue
    padding-left: 3px
  .gcsc-branding
    display: none !important
.gsc-adBlock
  display: none !important
.gsc-above-wrapper-area-container
.gsc-above-wrapper-area
  display: none
div::before
  display: none !important


/*
* Print style
* --------------------------------------------------------------
*/
@media print
  .navbar-spacer
  .table-of-contents
  .sidebar
    display: none
  .main
    left: 0
    width: 100%
  pre.language header
    border-bottom: 2px solid #999


